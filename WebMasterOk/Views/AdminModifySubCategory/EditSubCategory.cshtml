@model WebMasterOk.Models.CodeFirst.SubCategory

@{
    ViewData["Title"] = "EditSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditSubCategory</h1>

<h4>SubCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSubCategory" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TitleSubCategory" class="control-label"></label>
                <input asp-for="TitleSubCategory" class="form-control" />
                <span asp-validation-for="TitleSubCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionSubCategory" class="control-label"></label>
                <input asp-for="DescriptionSubCategory" class="form-control" />
                <span asp-validation-for="DescriptionSubCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureNameSubCategory" class="control-label"></label>
                <div style="position:relative;">
                    <a class="btn" href="javascript:;">
                        Выберите файл...
                        <input type="file" name="PathImage" size="40"
                               style="position:absolute;z-index:2;top:0;
                                left:0;filter: alpha(opacity=0); opacity:0;
                                background-color:transparent;color:transparent;"
                               onchange="$(" #upload-file-info").html($(this).val());">
                    </a>
                    <span class="label label-info" id="upload-file-info"></span>
                </div>
                @if (Model.PictureNameSubCategory == null)
                {
                    <div class="text-info">Нет картинки</div>
                }
                else
                {
                    <img class="img-thumbnail" src="@Url.Action("GetImage", "Home", new { id=Model.Id, typeObject="subCategory"})" />
                }
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

