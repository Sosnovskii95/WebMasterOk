@model IEnumerable<WebMasterOk.Models.CodeFirst.SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="AddSubCategory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleSubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionSubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleSubCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionSubCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.TitleCategory)
            </td>
            <td>
                <a asp-action="EditSubCategory" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
