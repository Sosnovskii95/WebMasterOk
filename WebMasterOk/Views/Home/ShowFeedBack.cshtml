@model WebMasterOk.Models.CodeFirst.FeedBack

@{
    ViewData["Title"] = "ShowFeedBack";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h4>Обратная связь</h4>
        <form asp-action="ShowFeedBack">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberFeedBack" class="control-label"></label>
                <input asp-for="NumberFeedBack" class="form-control" />
                <span asp-validation-for="NumberFeedBack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Задать вопрос" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

