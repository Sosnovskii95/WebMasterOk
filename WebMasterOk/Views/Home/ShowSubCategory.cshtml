@using X.PagedList.Mvc.Bootstrap4.Core;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<WebMasterOk.Models.CodeFirst.SubCategory>
@using WebMasterOk.Models.CodeFirst;
@using System.Web;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div class="row">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">@Html.ActionLink("Товары", "Index")</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="row">
                @foreach (SubCategory item in Model)
                {
                    <div class="col-md-3 pb-4">
                        <div class="card">
                            @if (item.PathImages != null)
                            {
                                <img class="card-img-top" src="@Url.Action("GetImage", "Home", new { id=item.Id, typeObject="subCategory"})" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@Html.ActionLink(item.TitleSubCategory, "ShowProduct", new { idSubCategory = item.Id })</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="container">
    @Html.PagedListPager(Model, page => Url.Action("ShowSubCategory", new
{
    page = page
}), Bootstrap4PagedListRenderOptions.Default)
</div>