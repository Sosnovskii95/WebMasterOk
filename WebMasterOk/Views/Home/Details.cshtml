@model WebMasterOk.Models.CodeFirst.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h1>Details</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            @foreach (var p in ViewBag.Categories)
            {
                <h5>@p.TitleCategory</h5>
            }
        </div>
        <div class="col-md-9">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TitleProduct)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TitleProduct)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DescriptionProduct)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DescriptionProduct)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Warranty)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Warranty)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PathImage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PathImage)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SubCategory)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SubCategory.Id)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
