@model IEnumerable<WebMasterOk.Models.CodeFirst.Category>
@using WebMasterOk.Models.CodeFirst;
@using System.Web;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100"  style="height: 450px;" src="..." alt="Первый слайд">
        </div>
        @foreach (PathImage item in ViewBag.Slider)
        {
            <div class="carousel-item">
                <img class="d-block w-100" style="height: 450px;" src="@Url.Action("GetImage", "Home", new { id=item.Id, typeObject="slider"})" />
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-10">
            <div class="row">
                @foreach (Category item in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            @if (item.PathImages != null)
                            {
                                <img class="card-img-top" src="@Url.Action("GetImage", "Home", new { id=item.Id, typeObject="category"})" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@Html.ActionLink(item.TitleCategory, "ShowSubCategory", new { idCategory = item.Id })</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog">

    </div>
</div>



@Html.ActionLink("Обратная связь", "ShowFeedBack", new { }, new { @class = "btn btn-primary feedback", data_dialog_title = "Создание модели" })
@section scripts
{
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".btn btn-primary feedback").on('click', function (e) {
                $.get(this.href).done(function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal("show");
                });
            });
        })
    </script>
}
