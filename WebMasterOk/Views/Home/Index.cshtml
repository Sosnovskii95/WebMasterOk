@model IEnumerable<WebMasterOk.Models.CodeFirst.Category>
@using WebMasterOk.Models.CodeFirst;
@using System.Web;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner p-3">
        @{ List<PathImage> list = ViewBag.Slider;
            for (int i = 0; i < list.Count; i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Url.Action("GetImage", "Home", new { id = list[i].Id, typeObject = "slider" })" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Url.Action("GetImage", "Home", new { id = list[i].Id, typeObject = "slider" })" />
                    </div>
                }
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Предыдущая</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Следующая</span>
    </a>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="row">
                @foreach (Category item in Model)
                {
                    <div class="col-md-3 pb-4">
                        <div class="card">
                            <img class="card-img-top" src="@Url.Action("GetImage", "Home", new { id=item.Id, typeObject="category"})" />
                            <div class="card-body">
                                <h5 class="card-title">@Html.ActionLink(item.TitleCategory, "ShowSubCategory", new { idCategory = item.Id })</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>