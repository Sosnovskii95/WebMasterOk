@model WebMasterOk.Models.CodeFirst.Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleCategory" class="control-label"></label>
                <input asp-for="TitleCategory" class="form-control" />
                <span asp-validation-for="TitleCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionCategory" class="control-label"></label>
                <input asp-for="DescriptionCategory" class="form-control" />
                <span asp-validation-for="DescriptionCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureNameCategory" class="control-label"></label>
                <div style="position:relative;">
                    <a class="btn" href="javascript:;">
                        Выберите файл...
                        <input type="file" name="PathImage" size="40"
                               style="position:absolute;z-index:2;top:0;
                                left:0;filter: alpha(opacity=0); opacity:0;
                                background-color:transparent;color:transparent;"
                               onchange="$(" #upload-file-info").html($(this).val());">
                    </a>
                    <span class="label label-info" id="upload-file-info"></span>
                </div>
                @if (Model.PictureNameCategory == null)
                {
                    <div class="text-info">Нет картинки</div>
                }
                else
                {
                    <img class="img-thumbnail" src="@Url.Action("GetImage", "Home", new { id=Model.Id, typeObject="category"})" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
