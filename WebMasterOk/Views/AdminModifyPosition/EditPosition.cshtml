@model WebMasterOk.Models.CodeFirst.Position

@{
    ViewData["Title"] = "EditPosition";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-4 offset-4">
        <h1>Редактирование должности</h1>
        <form asp-action="EditPosition" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TitlePosition" class="control-label"></label>
                <input asp-for="TitlePosition" class="form-control" />
                <span asp-validation-for="TitlePosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Вернуться к списку</a>
        </div>
    </div>
</div>